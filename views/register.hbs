{{#each messages}}
<div class="alert alert-danger" role="alert">
  {{this}}
</div>
{{/each}}
{{#each errors}}
<div class="alert alert-danger" role="alert">
  {{msg}}
</div>
{{/each}}
<form action="/register" method="POST">
  <div class="form-group">
    <label for="fname">First Name</label>
    <input name="fname" type="text" class="form-control" id="fname" placeholder="First name" {{#if fname}}value="{{fname}}"{{/if}}>
  </div>
  <div class="form-group">
    <label for="lname">Last Name</label>
    <input name="lname" type="text" class="form-control" id="lname" placeholder="Last name" {{#if lname}}value="{{lname}}"{{/if}}>
  </div>
  <div class="form-group">
    <label for="regcode">Registration Code</label>
    <input name="regcode" type="text" class="form-control" id="regcode" placeholder="Registration code" {{#if regcode}}value="{{regcode}}"{{/if}}>
  </div>
  <div class="form-group">
    <label for="email">Email address</label>
    <input name="email" type="text" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email" {{#if email}}value="{{email}}"{{/if}}>
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input name="password" type="password" class="form-control" id="password" placeholder="Password">
  </div>
<div class="form-group">
    <label for="passconf">Confirm Password</label>
    <input name="passconf" type="password" class="form-control" id="passconf" placeholder="Confirm Password">
  </div>
  <div class="form-group form-check">
    <input name="policycheck" type="checkbox" class="form-check-input" id="policycheck">
    <label class="form-check-label" for="public-check">I have read and agree to our <a href="/">Terms and Conditions</a> and <a href="/">Privacy Policy</a></label>
  </div>
  <button type="submit" class="btn btn-primary">Register</button>
</form>
<small class="form-text text-muted"> Already Registered? <a href="/login">Login Now</a></small>