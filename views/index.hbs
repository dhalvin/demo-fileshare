<div class="row px-2 py-4 p-md-5">
  <div class="col-12 px-2 py-4 p-md-5 bg-light rounded shadow">
    <h1>Secure File System</h1>
    <h4>Welcome {{user.fname}} - {{user.org}}</h4>
      <ul class="nav nav-tabs nav-fill" id="tabs" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="files-tab" data-toggle="tab" href="#files" role="tab" aria-controls="files" aria-selected="true">Files</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="account-tab" data-toggle="tab" href="#account" role="tab" aria-controls="account" aria-selected="false">Account</a>
        </li>
        {{#if user.admin}}
        <li class="nav-item">
          <a class="nav-link" id="user-admin-tab" data-toggle="tab" href="#users" role="tab" aria-controls="users" aria-selected="false">User Admin</a>
        </li>
        {{/if}}
        {{#if user.superadmin}}
        <li class="nav-item">
          <a class="nav-link" id="org-admin-tab" data-toggle="tab" href="#orgs" role="tab" aria-controls="orgs" aria-selected="false">Organization Admin</a>
        </li>
        {{/if}}
        <li>
          <form action="/logout?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-primary">Logout</button>
          </form>
        </li>
      </ul>

    <div class="tab-content" id="tabs-content">
      <!-- Files Tab Pane -->
      <div class="tab-pane fade show active" id="files" role="tabpanel" aria-labelledby="files-tab">
      </div>
      <!-- Account Tab Pane -->
      <div class="tab-pane fade" id="account" role="tabpanel" aria-labelledby="account-tab">
        <h4>Account Info</h4>
        <div class="form-group row">
          <label for="org" class="col-sm-2 col-form-label">Organization</label>
          <div class="col-sm-10">
            <input name="org" type="text" class="form-control" id="org" value="{{user.org}}" readonly>
          </div>
        </div>
        <div class="form-group row">
          <label for="name" class="col-sm-2 col-form-label">Name</label>
          <div class="col-sm-10">
            <input name="name" type="text" class="form-control" id="name" value="{{user.fname}} {{user.lname}}" readonly>
          </div>
        </div>
        <div class="form-group row">
          <label for="email" class="col-sm-2 col-form-label">Email Address</label>
          <div class="col-sm-10">
            <input name="email" type="text" class="form-control" id="email" value="{{user.email}}" readonly>
          </div>
        </div>
        <h4>Change Password</h4>
        <form action="/changepassword" method="POST">
          <div class="form-group row">
            <label for="password" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
              <input name="password" type="password" class="form-control" id="password" placeholder="Current Password" required>
            </div>
          </div>
          <small id="passwordReqs" class="form-text text-muted">Your password must be between 14 and 32 characters long and contain at least 1 of each of the following: uppercase letters, lowercase letters, numbers, and symbols.</small>
          <div class="form-group row">
            <label for="newpass" class="col-sm-2 col-form-label">New Password</label>
            <div class="col-sm-10">
              <input name="newpass" type="password" class="form-control" id="newpass" placeholder="New Password" required>
            </div>
          </div>
          <div class="form-group row">
            <label for="passconf" class="col-sm-2 col-form-label">Confirm New Password</label>
            <div class="col-sm-10">
              <input name="passconf" type="password" class="form-control" id="passconf" placeholder="Confirm New Password" required>
            </div>
          </div>
          <button type="submit" id="changepassword" class="btn btn-primary">Change Password</button>
        </form>
      </div>
      {{#if user.admin}}
      <!-- User Admin Tab Pane -->
      <div class="tab-pane fade" id="admin" role="tabpanel" aria-labelledby="user-admin-tab">
        <h4>User Administration</h4>
        <div class="form-group row">
          <label for="org" class="col-sm-2 col-form-label">Organization</label>
          <div class="col-sm-10">
            <input name="org" type="text" class="form-control" id="org" value="{{user.org}}" readonly>
          </div>
        </div>
        <div class="form-group form-inline row">
          <label for="regcode" class="col-sm-2 col-form-label">Registration Code<button class="btn btn-light" data-toggle="tooltip" data-placement="right" title="A registration code is required for a user to register a new account. Only share this code with authorized individuals, it allows access to sensitive information! A registration code will only be valid for 24 hours after it is generated. Only one code may be active at a time."><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-question-square" viewBox="0 0 16 16">
              <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
              <path d="M5.255 5.786a.237.237 0 0 0 .241.247h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.267 0-2.655.59-2.75 2.286zm1.557 5.763c0 .533.425.927 1.01.927.609 0 1.028-.394 1.028-.927 0-.552-.42-.94-1.029-.94-.584 0-1.009.388-1.009.94z"/>
            </svg></button></label>
          <div class="col-sm-4">
            <input name="regcode" type="text" class="form-control" id="regcode" value="{{regcode}}" readonly>
          </div>
          <div class="col-sm-2">
            <small>Expires: <strong><span id="expireTime">--:--:--</span></strong></small>
          </div>
          <div class="col-sm-2">
            <button type="submit" id="generateRegCode" class="btn btn-primary">Generate Code</button>
          </div>
        </div>
        <div class="form-group form-inline row">
          <label for="invite" class="col-sm-2 col-form-label">Send Invitation<button class="btn btn-light" data-html="true" data-toggle="tooltip" data-placement="right" title="Easily add users to your organization by sending an invite through email. <br> NOTE: The registration link in the email will expire at the same time as your active registration code."><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-question-square" viewBox="0 0 16 16">
              <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
              <path d="M5.255 5.786a.237.237 0 0 0 .241.247h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.267 0-2.655.59-2.75 2.286zm1.557 5.763c0 .533.425.927 1.01.927.609 0 1.028-.394 1.028-.927 0-.552-.42-.94-1.029-.94-.584 0-1.009.388-1.009.94z"/>
            </svg></button></label>
          <div class="col-sm-4">
            <input name="invite" type="text" class="form-control" id="invite" placeholder="name@example.com">
          </div>
          <div class="col-sm-2">
            <button type="submit" id="sendInvite" class="btn btn-primary">Send Invite</button>
          </div>
        </div>
        <div id="manageUsers">...</div>
      </div>
      {{/if}}
      {{#if user.superadmin}}
      <!-- Org Admin Tab Pane -->
      <div class="tab-pane fade" id="admin" role="tabpanel" aria-labelledby="user-admin-tab">
        <h4>Organization Administration</h4>
        <form action="/forgot" method="POST"></form>
          <div class="form-group">
            <label for="org">New Organization</label>
            <input name="org" type="text" class="form-control" id="org" placeholder="Organization Name">
          </div>
          <div class="form-group">
            <label for="email">Organization Admin Email</label>
            <input name="email" type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="email@example.com">
            <small id="emailHelp" class="form-text text-muted">An invitation email will be sent to this address.</small>
          </div>
          <button type="submit" class="btn btn-primary">Login</button>
        </form>
        <div id="manageUsers">...</div>
      </div>
      {{/if}}
    </div>
  </div>
</div>
{{#if user.admin}}
<script>var expireTime = {{regexpire}}</script>
{{\if}}
