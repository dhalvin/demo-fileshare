<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="uploadModalLabel">Uploading...</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <table class="table table-hover">
        <thead class="table-dark">
          <tr class="bg-primary">
            <th scope="col">Filename</th>
            <th scope="col">Size</th>
            <th scope="col">Progress</th>
          </tr>
        </thead>
        <tbody id="uploadBody">
          <tr class="uploadRow" rowNum="0">
            <th class="fileName" scope="row">...</th>
            <td class="fileSize" scope="row">...</td>
            <td class="fileprogress" scope="row">
              <div class="progress">
                <div class="progress-bar progress-bar-striped" role="progressbar"
                  aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%"></div>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="modal-footer">
      <button type="button" id='cancelBtn' class="btn btn-secondary" data-dismiss="modal"
        onclick="cancelUpload();">Cancel</button>
      <button type="button" id='confirmBtn' class="btn btn-primary" onclick="confirmUpload();">Upload</button>
      <button type="button" style='display:none;' id='dismissBtn' class="btn btn-primary"
        onclick="dismissModal();">Dismiss</button>
    </div>
  </div>
</div>